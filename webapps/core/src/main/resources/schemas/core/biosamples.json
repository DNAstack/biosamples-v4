[{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://www.ebi.ac.uk/biosamples/0.0.1/sample",
    "additionalProperties": false,
    "required": [
        "name",
        "accession",
        "domain",
        "release"
    ],
    "type": "object",
    "properties": {
        "name": {
            "description": "The sample name, or an alias, or another id",
            "type": "string"
        },
        "accession": {
            "description": "Sample accession",
            "type": "string",
            "pattern": "^SAM(D|N|E([AG]?))[0-9]+$"
        },
        "domain": {
            "description": "Sample AAP domain membership",
            "type": "string"
        },
        "release": {
            "description": "Sample relase date-time in ISO8601 format. Release date in the future means the sample is private",
            "type": "string",
            "format": "datetime"
        },
        "update": {
            "description": "Sample last update date-time in ISO8601 format. This is automatically set from the server on submission",
            "type": "string",
            "format": "datetime"
        },
        "characteristics": {
            "description": "All the characteristics associated to the sample",
            "type": "object",
            "additionalProperties": {
                "$ref": "http://www.ebi.ac.uk/biosamples/0.0.1/characteristic"
            }
        },
        "relationships": {
            "description": "Sample relationships with other samples in BioSamples",
            "type": "array",
            "items": {
                "$ref": "http://www.ebi.ac.uk/biosamples/0.0.1/relationship"
            }
        },
        "organization": {
            "description": "Organization information associated with the sample",
            "type": "array",
            "items": {
                "$ref": "http://www.ebi.ac.uk/biosamples/0.0.1/organisation"
            }
        },
        "contact": {
            "description": "Contact information of the people associated with the sample",
            "type": "array",
            "items": {
                "$ref": "http://www.ebi.ac.uk/biosamples/0.0.1/contact"
            }
        },
        "publications": {
            "description": "Pubblications associated with the sample",
            "type": "array",
            "items": {
                "$ref": "http://www.ebi.ac.uk/biosamples/0.0.1/publication"
            }
        }
    }
},
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://www.ebi.ac.uk/biosamples/0.0.1/characteristic",
    "title": "BioSamples attribute",
    "description": "Metadata associated with a sample",
    "additionalProperties": false,
    "type": "object",
    "properties": {
        "text": {
            "description": "The attribute value expressed as text",
            "type": "string"
        },
        "ontologyTerms": {
            "description": "An array of ontology iri associated to the attribute value",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "unit": {
            "description": "The unit associated with the attribute value",
            "type": "string"
        }
    }
},
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://www.ebi.ac.uk/biosamples/0.0.1/relationship",
    "title": "BioSAmples relationship",
    "description": "Relationship object connecting two BioSamples accessions",
    "additionalProperties": false,
    "type": "object",
    "required": [
        "source",
        "type",
        "target"
    ],
    "properties": {
        "source": {
            "description": "The sample accession where the relation starts from",
            "type": "string",
            "pattern": "^SAM(D|N|E([AG]?))[0-9]+$"        },
        "type": {
            "type": "string"
        },
        "target": {
            "description": "The sample accession where the relation targets to",
            "type": "string",
            "pattern": "^SAM(D|N|E([AG]?))[0-9]+$"
        }
    }
},
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://www.ebi.ac.uk/biosamples/0.0.1/organization",
    "title": "Organisation",
    "description": "Object representing an organization related to the sample in some way",
    "additionalProperties": false,
    "type": "object",
    "properties": {
        "Name": {
            "type": "string"
        },
        "Role": {
            "type":"string"
        },
        "E-mail": {
            "type":"string"
        },
        "URL": {
            "type":"string"
        },
        "Address": {
            "type":"string"
        }
    }
},
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://www.ebi.ac.uk/biosamples/0.0.1/contact",
    "title": "Contact",
    "description": "Object representing a contact reference for the sample",
    "additionalProperties": false,
    "type": "object",
    "properties": {
        "FirstName": {
            "type": "string"
        },
        "LastName": {
            "type":"string"
        },
        "MidInitials": {
            "type":"string"
        },
        "Name": {
            "type":"string"
        },
        "Role": {
            "type":"string"
        },
        "E-mail": {
            "type":"string"
        },
        "Affiliation": {
            "type":"string"
        },
        "URL": {
            "type":"string"
        }
    }
},
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://www.ebi.ac.uk/biosamples/0.0.1/publication",
    "title": "Publication",
    "description": "Object representing a publication associated to the sample",
    "additionalProperties": false,
    "type": "object",
    "properties": {
        "doi": {
            "type": "string"
        },
        "pubmed_id": {
            "type":"string"
        }
    }
},
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://www.ebi.ac.uk/biosamples/0.0.1/externalReference",
    "title": "BioSamples external reference",
    "description": "Object representing a link to a repository or page associated with the sample itself, e.g. a link to an ENA record ",
    "additionalProperties": false,
    "type": "object",
    "required": [
        "url"
    ],
    "properties": {
        "url": {
            "type": "string"
        }
    }
},
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://www.ebi.ac.uk/biosamples/0.0.1/curation",
    "title":"BioSamples curation object",
    "description": "An object that is applied to a sample to update one or more attributes and/or one or more external references",
    "additionalProperties": false,
    "type": "object",
    "required": [
        "attributesPre",
        "attributesPost",
        "externalReferencesPre",
        "externalReferencesPost"
    ],
    "properties": {
        "attributesPre": {
            "description": "The attribute to update, with it's type, value and iri. This need to match the sample in order for the curation to be applied",
            "type": "array",
            "items": {
                "$ref": "http://www.ebi.ac.uk/biosamples/0.0.1/curationAttribute"
            },
        },
        "attributesPost": {
            "description": "The updated version of the attribute",
            "type": "array",
            "items": {
                "$ref": "http://www.ebi.ac.uk/biosamples/0.0.1/curationAttribute"

            },
        },
        "externalReferencesPre": {
            "type": "array",
            "description": "The external reference to update",
            "items": {
                "type": "object",
                "additionalProperties": "false",
                "required": ["url"],
                "properties": {
                    "url": {
                        "type": "string"
                    }
                }
            }
        },
        "externalReferencesPost": {
            "type": "array",
            "description": "The updated value for the external reference",
            "items": {
                "type": "object",
                "additionalProperties": "false",
                "required": ["url"],
                "properties": {
                    "url": {
                        "type": "string"
                    }
                }
            }
        }
    }
},
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://www.ebi.ac.uk/biosamples/0.0.1/curationAttribute",
    "title": "BioSamples curation attribute",
    "description": "Define the way attributes are described in a curation object",
    "additionalProperties": false,
    "type": "object",
    "required": [
        "type",
        "value"
    ],
    "properties": {
        "type": "string",
        "value": "string",
        "iri": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    }
},
{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "id": "http://www.ebi.ac.uk/biosamples/0.0.1/curationLink",
    "title": "BioSamples curation link",
    "description": "Link together a curation object with a sample using a specific AAP domain as reference for the curation",
    "additionalProperties": false,
    "type": "object",
    "required": [
        "sample",
        "curation",
        "domain"
    ],
    "properties": {
        "sample": "string" 
    }
}]
